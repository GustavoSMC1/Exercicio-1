import random

def gerar_numero():
    return random.randint(1, 1000)


numero_secreto = gerar_numero()
tentativas = 10
acertou = False

print("Descubra o nÃºmero entre 1 e 1000! VocÃª tem 10 tentativas.")

for i in range(tentativas):
    palpite = int(input(f"Tentativa {i+1}: "))
    if palpite == numero_secreto:
        print("ğŸ‰ ParabÃ©ns! VocÃª acertou!")
        acertou = True
        break
    elif palpite < numero_secreto:
        print("O nÃºmero Ã© MAIOR.")
    else:
        print("O nÃºmero Ã© MENOR.")

if not acertou:
    print(f"âŒ Suas tentativas acabaram! O nÃºmero era {numero_secreto}.")
